@using Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Upload Document</title>
    <link rel="stylesheet" href="~/css/DocUploadStyle.css">
  </head>
<main>
  <div class="form-container">
    <form class="sign-in-form"  id="my-form" method="post" asp-action="ManageDoc" enctype="multipart/form-data">
      <h1>Загрузка документа</h1>
      <label for="name">Название документа:</label>
      <input type="name" id="name" name="name" required>
      <br>
      <label for="doc">Документ:</label>
      <input type="file" id="doc" name="doc" accept="application/pdf" required>
      <br>
      <button type="submit" class="sign-in-button" id="add">Загрузить</button>
    </form>
  </div>
</main>



</html>