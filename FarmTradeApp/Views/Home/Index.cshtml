
@model IEnumerable<Products>

<!DOCTYPE html>
<html>
  <head>
    <title>User Profile</title>
    <link rel="stylesheet" href="~/css/indexStyle.css">
  </head>
  <body>
    <header>
      <div class="logo">My Shop</div>
      <div class="search-bar">
        <input type="text" class="search-input" placeholder="Search products...">
        <button class="search-button">Search</button>
      </div>
      <div class="dropdown user-buttons">
        <button class="user-button">Categories</button>
                <ul class="dropdown-menu">
                  <li><a href="#">Category 1</a></li>
                  <li><a href="#">Category 2</a></li>
                  <li><a href="#">Category 3</a></li>
                </ul>
      </div>
      <div class="user-buttons">
        <a class="user-button button" href="~/SignIn">Sign In</a>
        <a class="user-button button" href="~/SignUp">Sign Up</a>
      </div>
    </header>
    <div class="product-grid">
  @foreach (var product in Model)
  {
    <a href="~/Product?id=@product.product_id">
    <div class="product">
      <img src="@product.photo" alt="pic" >
      <h3>@product.name</h3>
      <p>@product.description</p>
    </div>
    </a>
  }
  <div class="product">
          <img src="https://via.placeholder.com/150">
                  <h3>Product 1</h3>
        <p>Description of product 1.</p>
      </div>
      <div class="product">
          <img src="https://via.placeholder.com/150">
          <h3>Product 2</h3>
        <p>Description of product 2.</p>
      </div>
      <div class="product">
          <img src="https://via.placeholder.com/150">
                  <h3>Product 3</h3>
        <p>Description of product 3.</p>
      </div>
      <div class="product">
          <img src="https://via.placeholder.com/150">
                  <h3>Product 4</h3>
        <p>Description of product 4.</p>
      </div>
      <div class="product">
          <img src="https://via.placeholder.com/150">
                  <h3>Product 5</h3>
        <p>Description of product 5.</p>
      </div>
      <div class="product">
          <img src="https://via.placeholder.com/150">
                  <h3>Product 6</h3>
        <p>Description of product 6.</p>
      </div>
    </div>
  </body>
</html>
