@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Users
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Sign In</title>
    <link rel="stylesheet" href="~/css/signUpStyle.css">
  </head>
<main>
  <div class="form-container">
    <form class="sign-in-form"  id="my-form" method="post" asp-action="ManageSignUp" enctype="multipart/form-data">
      <h1>Sign Up</h1>
      <label for="name" >Name</label>
      <input type="name" id="name" name="name" required>
      <label for="addr">Address</label>
      <input type="name" id="addr" name="addr" required>
      <label for="photo">Profile Photo</label>
      <input type="file" id="photo" name="photo" accept="image/*" required>
      <label for="email">Email</label>
      <input type="email" id="email" name="email" required>
      <label for="password">Password</label>
      <input type="password" id="password" name="password" required>
      <button type="submit" class="sign-in-button" id="sign">Sign Up</button>
      <p>Already have an account? <a href="#">Sign In</a></p>
    </form>
  </div>
</main>



</html>